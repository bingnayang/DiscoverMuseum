<% layout('./layouts/boilerplate') %>

    <div class="mt-3 p-5 mb-3 bg-light text-dark text-center">
        <h1>Welcome To Discover Museum</h1>
        <a class="btn btn-primary" href="/museums/new">Add New Museum</a>
    </div>

    <div>
        <div class="row row-cols-1 row-cols-md-3 g-3">
            <% for ( let museum of museums ) {%>
            <div class="col">
                <div class="card">
                    <a class="card-block stretched-link text-decoration-none text-dark" href="/museums/<%= museum.id %>">
                        <img src="<%= museum.image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= museum.title %></h5>
                            <p class="card-text"><%= museum.description %></p>
                        </div>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
    </div>